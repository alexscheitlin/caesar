<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ch.scheitlin.alex.build</groupId>
        <artifactId>build-failure-resolution-assistant-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <groupId>ch.scheitlin.alex.build</groupId>
    <artifactId>build-failure-resolution-assistant</artifactId>

    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- build-server-model -->
        <dependency>
            <groupId>ch.scheitlin.alex.build.model</groupId>
            <artifactId>build-server-model</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- build-server-model -->

        <!-- build-model -->
        <dependency>
            <groupId>ch.scheitlin.alex.build.model</groupId>
            <artifactId>build-model</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- build-model -->

        <!-- maven-model -->
        <dependency>
            <groupId>ch.scheitlin.alex.maven</groupId>
            <artifactId>maven-model</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- maven-model -->

        <!-- error-model -->
        <dependency>
            <groupId>ch.scheitlin.alex.build.model</groupId>
            <artifactId>error-model</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- error-model -->

        <!-- build-server-api -->
        <dependency>
            <groupId>ch.scheitlin.alex.build</groupId>
            <artifactId>build-server-api</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- build-server-api -->

        <!-- git-api -->
        <dependency>
            <groupId>ch.scheitlin.alex.git.api</groupId>
            <artifactId>git-api</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- git-api -->

        <!-- build-server-build-log-parser -->
        <dependency>
            <groupId>ch.scheitlin.alex.build</groupId>
            <artifactId>build-server-build-log-parser</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- build-server-build-log-parser -->

        <!-- maven-build-log-parser -->
        <dependency>
            <groupId>ch.scheitlin.alex.maven</groupId>
            <artifactId>maven-build-log-parser</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- maven-build-log-parser -->

        <!-- maven-goal-log-parser -->
        <dependency>
            <groupId>ch.scheitlin.alex.maven</groupId>
            <artifactId>maven-goal-log-parser</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- maven-goal-log-parser -->

        <!-- maven-goal-classifier -->
        <dependency>
            <groupId>ch.scheitlin.alex.maven</groupId>
            <artifactId>maven-goal-classifier</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!-- maven-goal-classifier -->
    </dependencies>
</project>
